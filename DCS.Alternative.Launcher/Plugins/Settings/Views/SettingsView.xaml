<UserControl x:Class="DCS.Alternative.Launcher.Plugins.Settings.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DCS.Alternative.Launcher.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:DCS.Alternative.Launcher.Data"
             xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:DCS.Alternative.Launcher.Models"
             xmlns:views="clr-namespace:DCS.Alternative.Launcher.Views"
             d:DesignHeight="450"
             d:DesignWidth="800"
             ClipToBounds="True"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid x:Name="PART_BackgroundImage">
            <Image Margin="0,-80,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Images/background.jpg"
                   Stretch="UniformToFill" />
            <Image Width="250"
                   Height="150"
                   Margin="30"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Opacity="0.25"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   RenderOptions.EdgeMode="Aliased"
                   Source="/Images/dcs-world-logo.png"
                   Stretch="Uniform">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="0" />
                </Image.Effect>
            </Image>
        </Grid>
        <Border Margin="30"
                BorderBrush="#FF2F2F2F"
                BorderThickness="1"
                CornerRadius="0">
            <fluentWpf:AcrylicPanel NoiseOpacity="0"
                                    Target="{Binding ElementName=PART_BackgroundImage}"
                                    TintColor="#33000000"
                                    TintOpacity="1">
                <TabControl Background="Transparent"
                            BorderBrush="#FF2F2F2F"
                            BorderThickness="1,0,0,0"
                            TabStripPlacement="Left">
                    <TabControl.Resources>

                        <Style TargetType="TabItem">
                            <Setter Property="MinHeight" Value="30" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Name="Panel" Cursor="Hand">
                                            <ContentPresenter x:Name="ContentSite"
                                                              Margin="10,2"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              ContentSource="Header" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Panel" Property="Background" Value="#30FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="14"
                                                   Foreground="#FFFFFFFF"
                                                   Text="{Binding}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </TabControl.Resources>
                    <TabControl.Items>
                        <TabItem Header="INSTALLATIONS">
                            <controls:InstallationControl Margin="30" />
                        </TabItem>
                        <TabItem Header="VIEWPORTS">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Margin="0,0,0,10"
                                           Text="Need to come up with a description on what to do here"
                                           TextWrapping="Wrap" />

                                <Border Grid.Row="1"
                                        Background="#40000000"
                                        BorderBrush="#FF2F2F2F"
                                        BorderThickness="1" />
                                <ListView Grid.Row="1"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ItemsSource="{Binding ModuleViewports}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          SelectedItem="{Binding SelectedModuleViewport.Value, Mode=TwoWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ModuleViewportModel}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="75" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Image Width="75"
                                                       Height="75"
                                                       VerticalAlignment="Center"
                                                       Source="{Binding Module.Value.IconPath}"
                                                       Stretch="Uniform" />

                                                <Grid Grid.Column="1" Margin="0,7">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0"
                                                               Margin="0,0,0,0"
                                                               FontSize="14"
                                                               Foreground="#FFFFFFFF"
                                                               Text="{Binding Module.Value.DisplayName}" />
                                                    <TextBlock Grid.Row="1"
                                                               Margin="0,2"
                                                               FontSize="12"
                                                               Foreground="#FFFFFFFF"
                                                               Text="{Binding Module.Value.BaseFolderPath}" />
                                                    <StackPanel Grid.Row="2"
                                                                Margin="0,2"
                                                                Orientation="Horizontal">

                                                        <Button Width="20"
                                                                Height="20"
                                                                Margin="0,5,10,5"
                                                                Padding="0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Top"
                                                                Background="#FF006F00"
                                                                Command="{Binding DataContext.AddViewportCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                                CommandParameter="{Binding}"
                                                                Cursor="Hand">
                                                            <TextBlock FontFamily="{StaticResource Prototype}"
                                                                       FontSize="16"
                                                                       Foreground="#FFFFFFFF"
                                                                       Text="+">
                                                                <TextBlock.Effect>
                                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                                </TextBlock.Effect>
                                                            </TextBlock>
                                                        </Button>
                                                        <ItemsControl HorizontalAlignment="Stretch"
                                                                      HorizontalContentAlignment="Stretch"
                                                                      ItemsSource="{Binding Viewports}"
                                                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel Width="650" Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemContainerStyle>
                                                                <Style TargetType="ContentPresenter">
                                                                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                                                                    <Setter Property="Margin" Value="0,5,10,5" />
                                                                </Style>
                                                            </ItemsControl.ItemContainerStyle>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <Button Height="20"
                                                                                Padding="4,2"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Background="#FF1C1C1C"
                                                                                Command="{Binding DataContext.EditViewportCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                                                CommandParameter="{Binding}"
                                                                                Cursor="Hand">
                                                                            <TextBlock FontFamily="{StaticResource Prototype}"
                                                                                       FontSize="12"
                                                                                       Foreground="White"
                                                                                       Text="{Binding ViewportName}">
                                                                                <TextBlock.Effect>
                                                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                                                </TextBlock.Effect>
                                                                            </TextBlock>
                                                                        </Button>
                                                                        <Button Height="20"
                                                                                Padding="2"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Background="#FFAF0000"
                                                                                BorderThickness="0,1,1,1"
                                                                                Command="{Binding DataContext.RemoveViewportCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                                                CommandParameter="{Binding}"
                                                                                Cursor="Hand">
                                                                            <Path Margin="2"
                                                                                  Data="M 7 4 C 6.744125 4 6.4879687 4.0974687 6.2929688 4.2929688 L 4.2929688 6.2929688 C 3.9019687 6.6839688 3.9019687 7.3170313 4.2929688 7.7070312 L 11.585938 15 L 4.2929688 22.292969 C 3.9019687 22.683969 3.9019687 23.317031 4.2929688 23.707031 L 6.2929688 25.707031 C 6.6839688 26.098031 7.3170313 26.098031 7.7070312 25.707031 L 15 18.414062 L 22.292969 25.707031 C 22.682969 26.098031 23.317031 26.098031 23.707031 25.707031 L 25.707031 23.707031 C 26.098031 23.316031 26.098031 22.682969 25.707031 22.292969 L 18.414062 15 L 25.707031 7.7070312 C 26.098031 7.3170312 26.098031 6.6829688 25.707031 6.2929688 L 23.707031 4.2929688 C 23.316031 3.9019687 22.682969 3.9019687 22.292969 4.2929688 L 15 11.585938 L 7.7070312 4.2929688 C 7.5115312 4.0974687 7.255875 4 7 4 z"
                                                                                  Fill="#FFFFFFFF"
                                                                                  Stretch="Uniform" />
                                                                        </Button>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <Button Grid.Row="2"
                                        Height="30"
                                        Padding="3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Background="#FF006F00"
                                        Command="{Binding GenerateMonitorConfigCommand}">
                                    <TextBlock FontFamily="{StaticResource Prototype}"
                                               FontSize="16"
                                               Text="GENERATE MONITOR CONFIG">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Button>
                                <StackPanel Grid.Row="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding AddModuleViewportCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="16"
                                                   Text="+">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding RemoveModuleViewportCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="15"
                                                   Text="-">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl.Items>
                </TabControl>
            </fluentWpf:AcrylicPanel>
        </Border>
    </Grid>
</UserControl>