<UserControl x:Class="DCS.Alternative.Launcher.Plugins.Settings.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:data="clr-namespace:DCS.Alternative.Launcher.Data"
             xmlns:fluentWpf="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:DCS.Alternative.Launcher.Plugins.Settings.Models"
             xmlns:views="clr-namespace:DCS.Alternative.Launcher.Views"
             d:DesignHeight="450"
             d:DesignWidth="800"
             ClipToBounds="True"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid x:Name="PART_BackgroundImage">
            <Image Margin="0,-80,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Images/background.jpg"
                   Stretch="UniformToFill" />
            <Image Width="250"
                   Height="150"
                   Margin="30"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Opacity="0.25"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   RenderOptions.EdgeMode="Aliased"
                   Source="/Images/dcs-world-logo.png"
                   Stretch="Uniform">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="0" />
                </Image.Effect>
            </Image>
        </Grid>
        <Border Margin="30"
                BorderBrush="#FF2F2F2F"
                BorderThickness="1"
                CornerRadius="0">
            <fluentWpf:AcrylicPanel NoiseOpacity="0"
                                    Target="{Binding ElementName=PART_BackgroundImage}"
                                    TintColor="#33000000"
                                    TintOpacity="1">
                <TabControl Background="Transparent"
                            BorderBrush="#FF2F2F2F"
                            BorderThickness="1,0,0,0"
                            TabStripPlacement="Left">
                    <TabControl.Resources>

                        <Style TargetType="TabItem">
                            <Setter Property="MinHeight" Value="30" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Name="Panel" Cursor="Hand">
                                            <ContentPresenter x:Name="ContentSite"
                                                              Margin="10,2"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              ContentSource="Header" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Panel" Property="Background" Value="#30FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="14"
                                                   Foreground="#FFFFFFFF"
                                                   Text="{Binding}" />
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                    </TabControl.Resources>
                    <TabControl.Items>
                        <TabItem Header="INSTALLATIONS">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Border Grid.RowSpan="2"
                                        Background="#40000000"
                                        BorderBrush="#FF2F2F2F"
                                        BorderThickness="1"
                                        CornerRadius="0" />
                                <Grid Grid.Row="0" Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="75" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="75" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="20" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1"
                                               HorizontalAlignment="Left"
                                               FontSize="16"
                                               Text="VERSION" />
                                    <TextBlock Grid.Column="3"
                                               HorizontalAlignment="Left"
                                               FontSize="16"
                                               Text="BRANCH" />
                                    <TextBlock Grid.Column="5"
                                               HorizontalAlignment="Left"
                                               FontSize="16"
                                               Text="DIRECTORY" />
                                    <TextBlock Grid.Column="7"
                                               HorizontalAlignment="Left"
                                               FontSize="16"
                                               Text="Valid" />
                                </Grid>
                                <ListView Grid.Row="1"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ItemsSource="{Binding Installations}"
                                          SelectedItem="{Binding SelectedInstall.Value, Mode=TwoWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="20" SharedSizeGroup="Spacer0" />
                                                    <ColumnDefinition Width="75" SharedSizeGroup="Version" />
                                                    <ColumnDefinition Width="20" SharedSizeGroup="Spacer1" />
                                                    <ColumnDefinition Width="75" SharedSizeGroup="Branch" />
                                                    <ColumnDefinition Width="20" SharedSizeGroup="Spacer2" />
                                                    <ColumnDefinition Width="*" SharedSizeGroup="Location" />
                                                    <ColumnDefinition Width="20" SharedSizeGroup="Spacer3" />
                                                    <ColumnDefinition Width="75" SharedSizeGroup="Valid" />
                                                    <ColumnDefinition Width="20" SharedSizeGroup="Spacer4" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1"
                                                           HorizontalAlignment="Left"
                                                           Foreground="#FFFFFFFF"
                                                           Text="{Binding Version}" />
                                                <TextBlock Grid.Column="3"
                                                           HorizontalAlignment="Left"
                                                           Foreground="#FFFFFFFF"
                                                           Text="{Binding Variant}" />
                                                <TextBlock Grid.Column="5"
                                                           HorizontalAlignment="Left"
                                                           Foreground="#FFFFFFFF"
                                                           Text="{Binding Directory}" />
                                                <Border Grid.Column="7"
                                                        Background="#FF006F00"
                                                        Visibility="{Binding IsValidInstall, Converter={x:Static data:VisibilityConverter.Instance}}">
                                                    <TextBlock HorizontalAlignment="Center"
                                                               FontSize="16"
                                                               Foreground="#FFFFFFFF"
                                                               Text="Yes"
                                                               TextAlignment="Center" />
                                                </Border>
                                                <Border Grid.Column="7"
                                                        Background="#FFCF0000"
                                                        Visibility="{Binding IsValidInstall, Converter={x:Static data:VisibilityConverter.Instance}, ConverterParameter=reverse}">
                                                    <TextBlock HorizontalAlignment="Left"
                                                               FontSize="16"
                                                               Text="Yes" />
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <StackPanel Grid.Row="2"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                    <Button Height="30"
                                            Padding="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding DetectInstallationsCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="12"
                                                   Text="DETECT">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                    <Button Height="30"
                                            Padding="5"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#FF006F00"
                                            Command="{Binding VerifyInstallationsCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="12"
                                                   Text="VERIFY">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Row="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding AddInstallationCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="16"
                                                   Text="+">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding RemoveInstallationCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="15"
                                                   Text="-">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem Header="VIEWPORTS">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Margin="0,0,0,10"
                                           Text="Need to come up with a description on what to do here"
                                           TextWrapping="Wrap" />

                                <Border Grid.Row="1"
                                        Background="#40000000"
                                        BorderBrush="#FF2F2F2F"
                                        BorderThickness="1" />
                                <ListView Grid.Row="1"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          ItemsSource="{Binding ModuleViewports}"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          SelectedItem="{Binding SelectedModuleViewport.Value, Mode=TwoWay}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ModuleViewportModel}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="75" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Image Width="75"
                                                       Height="75"
                                                       VerticalAlignment="Center"
                                                       Source="{Binding Module.Value.IconPath}"
                                                       Stretch="Uniform" />

                                                <Grid Grid.Column="1" Margin="0,7">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Grid.Row="0"
                                                               Margin="0,0,0,0"
                                                               FontSize="14"
                                                               Foreground="#FFFFFFFF"
                                                               Text="{Binding Module.Value.DisplayName}" />
                                                    <TextBlock Grid.Row="1"
                                                               Margin="0,2"
                                                               FontSize="12"
                                                               Foreground="#FFFFFFFF"
                                                               Text="{Binding Module.Value.BaseFolderPath}" />
                                                    <ItemsControl Grid.Row="2"
                                                                  Margin="0,2"
                                                                  ItemsSource="{Binding Viewports}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemContainerStyle>
                                                            <Style TargetType="ContentPresenter">
                                                                <Setter Property="Margin" Value="0,0,20,0" />
                                                            </Style>
                                                        </ItemsControl.ItemContainerStyle>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Height="20"
                                                                        Padding="2"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Background="#FF006F00"
                                                                        Command="{Binding DataContext.EditViewportCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                                                        CommandParameter="{Binding}"
                                                                        Cursor="Hand">
                                                                    <TextBlock FontFamily="{StaticResource Prototype}"
                                                                               FontSize="10"
                                                                               Foreground="White"
                                                                               Text="{Binding Name}">
                                                                        <TextBlock.Effect>
                                                                            <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                                        </TextBlock.Effect>
                                                                    </TextBlock>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <StackPanel Grid.Row="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding AddViewportCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="16"
                                                   Text="+">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                    <Button Width="30"
                                            Height="30"
                                            Padding="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Bottom"
                                            Background="#6F1C00C6"
                                            Command="{Binding RemoveViewportCommand}">
                                        <TextBlock FontFamily="{StaticResource Prototype}"
                                                   FontSize="15"
                                                   Text="-">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl.Items>
                </TabControl>
            </fluentWpf:AcrylicPanel>
        </Border>
    </Grid>
</UserControl>