    <Style x:Key="ResizeThumbStyle" TargetType="{x:Type local:ResizeThumb}">
        <Setter Property="Background" Value="#FFFFFFFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ResizeThumb}">
                    <Border Background="{TemplateBinding Background}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:DesignerItem}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:DesignerItem}">
                    <Grid>
                        <Border Background="#01FFFFFF">
                            <ContentPresenter />
                        </Border>
                        <Grid x:Name="AdornerishLayer" Opacity="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Path Grid.Row="0"
                                      Grid.Column="0"
                                      Stretch="Fill"
                                      Stroke="#CFFFFFFF"
                                      StrokeThickness="1">
                                    <Path.Data>
                                        <LineGeometry StartPoint="0,0" EndPoint="1,1" />
                                    </Path.Data>
                                </Path>
                                <Path Grid.Row="0"
                                      Grid.Column="2"
                                      Stretch="Fill"
                                      Stroke="#CFFFFFFF"
                                      StrokeThickness="1">
                                    <Path.Data>
                                        <LineGeometry StartPoint="1,0" EndPoint="0,1" />
                                    </Path.Data>
                                </Path>
                                <Path Grid.Row="2"
                                      Grid.Column="0"
                                      Stretch="Fill"
                                      Stroke="#CFFFFFFF"
                                      StrokeThickness="1">
                                    <Path.Data>
                                        <LineGeometry StartPoint="0 1" EndPoint="1 0" />
                                    </Path.Data>
                                </Path>
                                <Path Grid.Row="2"
                                      Grid.Column="2"
                                      Stretch="Fill"
                                      Stroke="#CFFFFFFF"
                                      StrokeThickness="1">
                                    <Path.Data>
                                        <LineGeometry StartPoint="0 0" EndPoint="1 1" />
                                    </Path.Data>
                                </Path>
                                <local:MoveThumb Grid.Row="1"
                                                 Grid.Column="1"
                                                 Width="20"
                                                 Height="20"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                 Style="{StaticResource MoveThumbStyle}" />
                            </Grid>
                            <local:ResizeThumb Height="2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Top"
                                               Cursor="SizeNS"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Stretch"
                                               Cursor="SizeWE"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="2"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Stretch"
                                               Cursor="SizeWE"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Height="2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Bottom"
                                               Cursor="SizeNS"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="7"
                                               Height="7"
                                               Margin="-2,-2,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Cursor="SizeNWSE"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="7"
                                               Height="7"
                                               Margin="0,-2,-2,0"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Cursor="SizeNESW"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="7"
                                               Height="7"
                                               Margin="-2,0,0,-2"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               Cursor="SizeNESW"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                            <local:ResizeThumb Width="7"
                                               Height="7"
                                               Margin="0,0,-2,-2"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Bottom"
                                               Cursor="SizeNWSE"
                                               DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                               Style="{StaticResource ResizeThumbStyle}" />
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="AdornerishLayer" Property="Opacity" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>