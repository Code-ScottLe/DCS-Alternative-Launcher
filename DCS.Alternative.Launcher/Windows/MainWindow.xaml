<Window x:Class="DCS.Alternative.Launcher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1024"
        Height="600"
        MaxWidth="1024"
        MaxHeight="600"
        WindowStyle="None"
        mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="80"
                      CornerRadius="0"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="0"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Border BorderBrush="#FF2F2F2F" BorderThickness="1">
        <Grid>
            <Image x:Name="BackgroundImage"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Images/background.jpg"
                   Stretch="UniformToFill" />
            <Image Width="250"
                   Height="150"
                   Margin="30"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   RenderOptions.EdgeMode="Aliased"
                   Source="/Images/dcs-world-logo.png"
                   Stretch="Uniform">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="0" />
                </Image.Effect>
            </Image>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border BorderBrush="#FF2F2F2F" BorderThickness="0,0,0,1">
                    <Grid>
                        <fw:AcrylicPanel NoiseOpacity="0"
                                         Target="{Binding ElementName=BackgroundImage}"
                                         TintColor="#33000000"
                                         TintOpacity="1">
                            <Grid>
                                <Image Width="90"
                                       Height="120"
                                       Margin="0,-17,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       RenderOptions.EdgeMode="Aliased"
                                       Source="/Images/jabbers-logo.png"
                                       Stretch="Uniform">
                                    <Image.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="0" />
                                    </Image.Effect>
                                </Image>
                                <ItemsControl HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              ItemsSource="{Binding PluginsButtons}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Margin="0,10,0,0"
                                                    Padding="20,5"
                                                    Background="Transparent"
                                                    Command="{Binding DataContext.ShowPluginCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                    CommandParameter="{Binding}"
                                                    Cursor="Hand"
                                                    Foreground="White"
                                                    Style="{StaticResource ButtonRevealStyle}"
                                                    WindowChrome.IsHitTestVisibleInChrome="True">
                                                <TextBlock FontFamily="{StaticResource Prototype}"
                                                           FontSize="18"
                                                           Text="{Binding Name}">
                                                    <TextBlock.Effect>
                                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                    </TextBlock.Effect>
                                                </TextBlock>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <MenuItem Margin="0,15,-20,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Background="Transparent"
                                          Cursor="Hand"
                                          Foreground="White"
                                          ItemsSource="{Binding Installations}"
                                          WindowChrome.IsHitTestVisibleInChrome="True">
                                    <MenuItem.ItemContainerStyle>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="Command" Value="{Binding DataContext.SelectInstallCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
                                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
                                        </Style>
                                    </MenuItem.ItemContainerStyle>
                                    <MenuItem.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock FontFamily="{StaticResource Prototype}"
                                                       FontSize="11"
                                                       FontWeight="Light"
                                                       Text="{Binding Variant}">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </DataTemplate>
                                    </MenuItem.ItemTemplate>
                                    <MenuItem.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="{StaticResource Prototype}"
                                                       FontSize="11"
                                                       FontWeight="Light"
                                                       Text="{Binding SelectedInstall.Value.DisplayVariant}">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <Path Margin="5,3,0,0"
                                                  Data="M 0 0 L 6 6 L 12 0 Z"
                                                  Fill="White">
                                                <Path.Effect>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" />
                                                </Path.Effect>
                                            </Path>
                                        </StackPanel>
                                    </MenuItem.Header>
                                </MenuItem>

                                <Button Width="16"
                                        Height="16"
                                        Margin="5"
                                        Padding="3"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <Path Data="M 7 4 C 6.744125 4 6.4879687 4.0974687 6.2929688 4.2929688 L 4.2929688 6.2929688 C 3.9019687 6.6839688 3.9019687 7.3170313 4.2929688 7.7070312 L 11.585938 15 L 4.2929688 22.292969 C 3.9019687 22.683969 3.9019687 23.317031 4.2929688 23.707031 L 6.2929688 25.707031 C 6.6839688 26.098031 7.3170313 26.098031 7.7070312 25.707031 L 15 18.414062 L 22.292969 25.707031 C 22.682969 26.098031 23.317031 26.098031 23.707031 25.707031 L 25.707031 23.707031 C 26.098031 23.316031 26.098031 22.682969 25.707031 22.292969 L 18.414062 15 L 25.707031 7.7070312 C 26.098031 7.3170312 26.098031 6.6829688 25.707031 6.2929688 L 23.707031 4.2929688 C 23.316031 3.9019687 22.682969 3.9019687 22.292969 4.2929688 L 15 11.585938 L 7.7070312 4.2929688 C 7.5115312 4.0974687 7.255875 4 7 4 z"
                                          Fill="#FF5F5F5F"
                                          Stretch="Uniform" />
                                </Button>
                            </Grid>
                        </fw:AcrylicPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <ContentControl x:Name="NavigationFrame"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>